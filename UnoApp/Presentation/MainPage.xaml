<Page
    x:Class="UnoApp.Presentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uno="using:Uno.UI.Toolkit"
    mc:Ignorable="d"
    Background="#F2F2F2">
    <!-- Nền xám nhẹ cho sang trọng -->

    <Grid uno:VisibleBoundsPadding.PaddingMask="All">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- 1. HEADER: Tiêu đề & Nút Giỏ Hàng -->
        <Grid Grid.Row="0" Background="White" Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Cửa Hàng Uno" 
                       FontSize="24" 
                       FontWeight="ExtraBold" 
                       Foreground="#6200EE"
                       VerticalAlignment="Center"/>

            <!-- Nút Giỏ Hàng có Badge số lượng (Giả lập) -->
            <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Padding="5">
                <Grid>
                    <SymbolIcon Symbol="Shop" Foreground="Black"/>
                    <!-- Badge số lượng -->
                    <Border Background="Red" 
                            CornerRadius="10" 
                            Width="16" Height="16" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,-5,-5,0">
                        <TextBlock Text="0" FontSize="10" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Button>
        </Grid>

        <!-- 2. DANH SÁCH SẢN PHẨM -->
        <Grid Grid.Row="1" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Trạng thái loading -->
            <TextBlock x:Name="StatusText" 
                       Grid.Row="0"
                       Text="Đang tải dữ liệu..." 
                       FontSize="12"
                       HorizontalAlignment="Center" 
                       Foreground="Gray" 
                       Margin="0,0,0,10"/>

            <!-- ListView hiển thị Card -->
            <ListView x:Name="ProductList" 
                      Grid.Row="1"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      ItemClick="ProductList_ItemClick">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,5"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Card Sản Phẩm -->
                        <Grid Background="White" CornerRadius="12" Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Ảnh -->
                                <ColumnDefinition Width="*"/>
                                <!-- Thông tin -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Giá -->
                            </Grid.ColumnDefinitions>

                            <!-- Ảnh giả lập (Placeholder) -->
                            <Border Grid.Column="0" Width="60" Height="60" CornerRadius="8" Background="#E0E0E0">
                                <SymbolIcon Symbol="Camera" Foreground="Gray"/>
                            </Border>

                            <!-- Thông tin -->
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="16" 
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Barcode}" 
                                           FontSize="12" 
                                           Foreground="Gray"/>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="4,2">
                                        <TextBlock Text="{Binding Unit}" FontSize="10" Foreground="#1565C0"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Giá tiền & Nút thêm nhanh -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding Price}" 
                                           Foreground="#D32F2F" 
                                           FontWeight="Bold" 
                                           FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
